# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="{{ zsh_theme }}"
DISABLE_AUTO_UPDATE="true"
HIST_STAMPS="yyyy/mm/dd"

plugins=(git {% if virtualenv %}virtualenv virtualenvwrapper{%endif%})
source $ZSH/oh-my-zsh.sh

# User configuration

export PATH="/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/usr/local/sbin"
export LANG=en_US.UTF-8
export EDITOR=vim


# Aliases
alias g=git
alias ll='ls -lh'
alias la='ls -lah'
alias home='cd ~;clear'
alias up='cd ..'

{% if google_cloud_sdk %}
# The next line updates PATH for the Google Cloud SDK.
source '/home/{{system_user}}/google-cloud-sdk/path.zsh.inc'

# The next line enables bash completion for gcloud.
source '/home/{{system_user}}/google-cloud-sdk/completion.zsh.inc'
{% endif %}


{% if virtualenv %}
# Load up virtualenv and wrapper
export WORKON_HOME={{ workon_home }}
source /usr/local/bin/virtualenvwrapper.sh
{% endif %}
